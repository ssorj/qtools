@command
def build(app):
    # check_module("build")
    # check_module("wheel")

    copy("subrepos/plano/src/plano", "src/qtools/plano")

    run("python -m build")

@command
def test(app):
    # check_module("venv")

    build(app)

    wheel = find_wheel()

    with temp_dir() as dir:
        run(f"python -m venv {dir}")
        run(f". {dir}/bin/activate && pip install --force-reinstall {wheel}", shell=True)

        path = call(f". {dir}/bin/activate && command -v qtools-self-test", shell=True).strip()
        expected_path = f"{dir}/bin/qtools-self-test"

        assert path == expected_path, (path, expected_path)

        run(f". {dir}/bin/activate && qtools-self-test --exclude tls", shell=True)

@command
def install(app):
    build(app)

    wheel = find_wheel()

    run(f"pip install --user --force-reinstall {wheel}")

@command
def clean(app):
    remove("dist")
    remove("src/qtools/__pycache__")

@command
def upload(app):
    """
    Upload the package to PyPI
    """

    check_program("twine", "pip install twine")

    build(app)

    run("twine upload --repository testpypi dist/*", shell=True)

def find_wheel():
    for file in list_dir("dist", "ssorj_qtools-*.whl"):
        return join("dist", file)
    else:
        fail("Wheel file not found")
