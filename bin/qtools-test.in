# -*- mode: sh; -*-

set -e

if (( $# != 1 )); then
    echo "Usage: qtools-test ADDRESS-URL"
    exit 1
fi

url=$1
work_dir=$(mktemp -d)
sent_message=$RANDOM

trap 'kill $(jobs -p)' SIGINT

qreceive $OPTIONS $url --count 1 > $work_dir/received_message &
qsend $OPTIONS $url --message $sent_message

if [[ $(cat $work_dir/received_message) != $sent_message ]]; then
    echo "qtools-test: Send and receive FAILED"
    exit 1
fi

qreceive $OPTIONS $url --count 10 > /dev/null &
qmessage --count 10 | qsend $OPTIONS $url

qreceive $OPTIONS $url --count 1 < /dev/null &
qmessage --count 1 | qsend --presettled $OPTIONS $url

echo "qtools-test: Send and receive PASSED"

qrespond $OPTIONS $url --count 1 &
qrequest $OPTIONS $url --message abc > $work_dir/response_message

if [[ $(cat $work_dir/response_message) != ABC ]]; then
    echo "qtools-test: Request and respond FAILED"
    exit 1
fi

rm -rf $work_dir

echo "qtools-test: Request and respond PASSED"
