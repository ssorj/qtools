import os
import sys

home = os.path.normpath("@qtools_home@")
sys.path.insert(0, os.path.join(home, "python"))

from qtools import *

def main():
    description = "A simple AMQP message broker for testing"
    parser = ArgumentParser(description=description)

    parser.add_argument("domain", metavar="DOMAIN", default="localhost:5672")
    parser.add_argument("--quiet", action="store_true")
    parser.add_argument("--verbose", action="store_true")

    args = parser.parse_args()

    broker = Broker(args.domain)
    broker.quiet = args.quiet
    broker.verbose = args.verbose
    
    broker.run()

if __name__ == "__main__":
    try:
        main()
    except KeyboardInterrupt:
        pass
